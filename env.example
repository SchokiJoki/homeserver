# ---- System / Pfade ----
NC_BASE=/srv/backup/A/nextcloud
TZ=Europe/Berlin
PUID=1000
PGID=1000

# ---- Nextcloud Hostname (f√ºr Caddy & Browser) ----
NEXTCLOUD_HOST=nextcloud.lan

# ---- MariaDB ----
DB_NAME=nextcloud
DB_USER=ncuser
DB_PASSWORD=changeme
DB_ROOT_PASSWORD=changeme

# ---- Nextcloud PHP Limits ----
PHP_MEMORY_LIMIT=1024M
PHP_UPLOAD_LIMIT=4G

# ---- Portainer ----
PORTAINER_PORT=9000

# ---- Backup ----
BACKUP_RETENTION_DAYS=30

# ---- OpenCVE ----
OPENCVE_REPOSITORY=https://github.com/opencve/opencve.git
OPENCVE_VERSION=1.5.0
OPENCVE_CONFIG_PATH=./internals/opencve/config/opencve.cfg
OPENCVE_DB_USER=opencve
OPENCVE_DB_PASSWORD=change-me

# ---- LiteLLM (OpenWebUI proxy + Budget) ----
LITELLM_MASTER_KEY=replace-with-random
LITELLM_DB_PASSWORD=replace-with-random
